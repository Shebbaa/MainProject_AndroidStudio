<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="12dp">
    <EditText android:id="@+id/et_question" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ваш вопрос" />
    <Button android:id="@+id/btn_send_question" android:layout_width="match_parent" android:layout_height="48dp" android:text="Отправить" android:layout_marginTop="8dp"/>
    <ListView android:id="@+id/lv_questions" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="12dp"/>
</LinearLayout>
